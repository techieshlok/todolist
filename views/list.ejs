<body>
    <div class="box" id="heading">
        <h1><%=day1 %></h1>
    </div>
    <div class="box">
      <%  newWork.forEach(function(work){%>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=work._id%>" onchange="this.form.submit()">
                 <p><%=work.name%></p>
                </div>
                <input type="hidden" name="shlok1" value="<%=day1%>">
        </form>
        <% }) %>
        <form action="/" method="post">
            <input type="text"  name="worklist" placeholder="New work" autocomplete="off">
            <button type="submit" name="button" value="<%=day1%>">+</button>
    </form>
    </div>
</body>
</html>